<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Approved by</th>
      <th>Money goal</th>
      <th>Finish date</th>
      <th>Description</th>
      <th>Approved</th>
      <th>Rating</th>
      <th>Founded</th>
      <th>Foundation date</th>
      <th>Approval date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.approved_by %></td>
        <td><%= project.money_goal %></td>
        <td><%= project.finish_date %></td>
        <td><%= project.description %></td>
        <td><%= project.approved %></td>
        <td><%= project.rating %></td>
        <td><%= project.founded %></td>
        <td><%= project.foundation_date %></td>
        <td><%= project.approval_date %></td>
        <td><%= link_to 'Show', project %></td>
        <% if project.creators.include?(current_user) %>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

