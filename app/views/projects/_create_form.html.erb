<%= form_with(model: project, local: true, html: {multipart: true}) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :project_name %>
  </div>
  <div class="field">
    <%= form.label :money_goal %>
    <%= form.number_field :money_goal, id: :project_money_goal %>
  </div>
  <div class="field">
    <%= form.label :finish_date %>
    <%= form.datetime_select :finish_date, id: :project_finish_date %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, :cols => "30", :rows => "10",id: :project_description %>
    <p>You can user Markdown for links and formatting</p>
  </div>
  <div class="field">
    <%= form.label :main_image, class: 'col-sm-6 control-label' %>
    <%= form.file_field :main_image %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
